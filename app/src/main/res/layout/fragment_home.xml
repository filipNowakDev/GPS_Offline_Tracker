<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:text="Lat: ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/latitude_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.501"
            />

    <TextView
            android:text="Lon: ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/longitude_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/latitude_box"
            android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toTopOf="@+id/accuracy_box"/>

    <Button
            android:text="@string/end_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_recording_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="128dp"/>

    <Button
            android:text="@string/start_recording_string"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:id="@+id/start_recording_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/end_recording_button"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginBottom="24dp"/>

    <TextView
            android:text="Acc: ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accuracy_box"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/start_recording_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/longitude_box"/>

</android.support.constraint.ConstraintLayout>