<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:text="Lat: ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/latitude_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/longitude_box"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:text="Lon: ..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/longitude_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/latitude_box"
            android:layout_marginTop="16dp"
            />

    <Button
            android:text="@string/end_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_recording_button"
            app:layout_constraintTop_toBottomOf="@+id/start_recording_button"
            app:layout_constraintVertical_bias="0.495"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

    <Button
            android:text="@string/start_recording_string"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:id="@+id/start_recording_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/end_recording_button"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/longitude_box"/>

</android.support.constraint.ConstraintLayout>